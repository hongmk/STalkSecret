<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hongmk.stalksecret.CreateContentActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/edit_content_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/darkblue"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.98"
            android:scrollbars="vertical">


            <EditText
                android:id="@+id/edit_content_editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="15"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:linksClickable="true"
                android:autoLink="web"
                android:backgroundTint="@android:color/transparent"
                android:hint="여기에는 작성된 글을 뿌려줄예정">

                <requestFocus />

            </EditText>

        </ScrollView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.02">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.8"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:hint="삭제"
                    android:layout_weight="0.1"
                    android:layout_marginTop="3.5dp"
                    android:layout_marginBottom="3.5dp"
                    android:layout_marginRight="7dp"
                    android:textColorHint="@color/white"
                    android:backgroundTint="@color/google_plus_brand_color"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:hint="수정"
                    android:layout_weight="0.1"
                    android:layout_marginTop="3.5dp"
                    android:layout_marginBottom="3.5dp"
                    android:layout_marginRight="7dp"
                    android:textColorHint="@color/white"
                    android:backgroundTint="@color/facebook_brand_color"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</FrameLayout>
