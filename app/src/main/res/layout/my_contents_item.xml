<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:focusable="false">

        <CheckBox
            android:id="@+id/myContentsCheck"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:checked="false"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:buttonTint="@color/facebook_brand_color"
            android:focusable="false"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.8"
            android:focusable="false"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="13dp">

            <TextView
                android:id="@+id/mycontent_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:textSize="10sp"
                android:textColor="@color/shb_medium_blur_gray"
                android:focusable="false"/>

            <TextView
                android:id="@+id/mycontent_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="17dp"
                android:gravity="start"
                android:text="Title"
                android:textStyle="bold"
                android:textColor="@color/cardview_dark_background"
                android:focusable="false"/>

            <TextView
                android:id="@+id/mycontent_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="13dp"
                android:textColor="#4b4b4b"
                android:text="contents"
                android:gravity="start"
                android:layout_marginRight="5dp"
                android:focusable="false"/>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/mycontent_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="false"
        android:visibility="gone"/>

</android.support.v7.widget.CardView>