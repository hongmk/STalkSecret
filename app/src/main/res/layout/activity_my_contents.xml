<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hongmk.stalksecret.MyContentsActivity"
    android:orientation="vertical"
    android:weightSum="2">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_contents_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/shb_bg_navy"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <!--아이템을 리스트로표시-->
    <ListView
        android:id="@+id/myContents_listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:dividerHeight="3sp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="전체선택"
                android:textColor="@color/white"
                android:background="@drawable/button_default_bg"
                android:backgroundTint="@color/facebook_brand_color"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:onClick="checkAll"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="선택해제"
                android:textColor="@color/white"
                android:background="@drawable/button_default_bg"
                android:backgroundTint="@color/facebook_brand_color"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:onClick="unCheckAll"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="삭제"
                android:textColor="@color/white"
                android:background="@drawable/button_default_bg"
                android:backgroundTint="@color/facebook_brand_color"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:onClick="deleteCheckedItem"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
