<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.hongmk.stalksecret.EditNicnameActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="8"
    android:orientation="vertical">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/edit_password_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/shb_bg_navy"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <EditText
        android:id="@+id/edit_password_current"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:gravity="center"
        android:layout_margin="13dp"
        android:textSize="18dp"
        android:hint="현재비밀번호"
        android:inputType="textWebPassword"
        android:textColorHint="@color/hintColor"
        android:background="@drawable/border_edittext"/>


    <EditText
        android:id="@+id/edit_password_new"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:gravity="center"
        android:layout_margin="13dp"
        android:textSize="18dp"
        android:hint="변경 후 비밀번호"
        android:inputType="textWebPassword"
        android:textColorHint="@color/hintColor"
        android:background="@drawable/border_edittext"/>

    <EditText
        android:id="@+id/edit_password_re"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:gravity="center"
        android:layout_margin="13dp"
        android:textSize="18dp"
        android:hint="변경 후 비밀번호 재확인"
        android:inputType="textWebPassword"
        android:textColorHint="@color/hintColor"
        android:background="@drawable/border_edittext"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="13dp"
        android:textColor="@color/white"
        android:background="@color/shb_button"
        android:text="암호검증"
        android:onClick="verifyEditPassword"/>

    <Button
        android:id="@+id/edit_password_complete"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="완료"
        android:layout_weight="1"
        android:layout_margin="13dp"
        android:textColor="@color/white"
        android:background="@color/shb_button"
        android:onClick="completeEditPassword"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.1" />

</LinearLayout>
</android.support.v7.widget.CardView>